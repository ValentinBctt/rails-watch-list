<div class="header">
  <%= image_tag "count_theapplication_themovie_3042.png", alt: "Logo", id: "logo" %>
  <h1>Create a new list</h1>
</div>

<%= link_to lists_path do %>
  <i class="fa-solid fa-arrow-left"></i>
<% end %>

<div class="form-new">
  <%= simple_form_for @list do |f| %>
    <!-- Champ pour le nom de la liste -->
    <div class="form-group">
      <%= f.input :name, label: 'List Name', input_html: { class: 'form-control' } %>
    </div>

    <!-- Champ pour l'image de couverture -->
    <div class="form-group">
      <%= f.input :image, label: 'Cover Image', as: :file, input_html: { class: 'form-control' } %>
    </div>

    <!-- Bouton de soumission du formulaire -->
    <div class="form-actions d-flex justify-content-center">
  <%= f.submit 'Create List', class: 'btn btn-primary text-center' %>
</div>
  <% end %>
</div>
